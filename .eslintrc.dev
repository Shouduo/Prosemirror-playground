{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["jsx-a11y", "react-hooks"],
  "rules": {
    "max-lines": ["error", {
        "max": 500
      }
    ],
    "no-console": ["warn"],
    "jsx-quotes": ["error"],
    "semi": ["error", "always"],
    "no-trailing-spaces": ["error"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
